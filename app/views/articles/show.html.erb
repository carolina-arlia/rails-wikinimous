<nav class="navbar navbar-light bg-light" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header"><%= link_to "Wikinimous", articles_path %></div>
    <div class="navbar-header"><%= link_to "Add a new article", new_article_path %></div>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1><%= @article.title %>
        <small>
          <%= link_to edit_article_path do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </small>
        <small>
          <%= link_to article_path(@article),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </small>
      </h1>
      <p><%= @article.content %></p>
    </div>
  </div>
</div>
